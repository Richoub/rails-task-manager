<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<ul>
  <li>
    <% if @task.completed %>
      <i class="far fa-check-square"></i> This task is completed
    <% else %>
      <i class="far fa-square"></i> This task is not completed yet
    <% end %>
  </li>
</ul>
<ul>
  <li><i class="fas fa-edit"></i> <%= link_to "Make an edit", edit_path %></li>
  <li><i class="fas fa-trash-alt"></i> <%= link_to 'Delete task',
  delete_task_path(@task),
  method: :delete,
  data: { confirm: "Are you sure?" } %></li>
  <li><i class="fas fa-undo-alt"></i> <%= link_to "Back to task list", tasks_path %></li>
</ul>
